<% if params[:type] == "Have" %>
  $(".have-<%= @item.id %>,[item_code='have-<%= @item.item_code %>']").replaceWith("<%= escape_javascript(render('items/unhave' , item: @item)) %>");
<% else %>
  $(".want-<%= @item.id %>,[item_code='want-<%= @item.item_code %>']").replaceWith("<%= escape_javascript(render('items/unwant' , item: @item)) %>");
<% end %>

$('.btn-have,.btn-want').removeAttr('disabled');

<% if current_user %>
  var have_count = $("#have_count");
  if (have_count) {
    have_count.html('<%= current_user.haves.count %>')
  }
  var want_count = $("#want_count");
  if (want_count) {
    want_count.html('<%= current_user.wants.count %>')
  }
<% end %>